<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="UserMapper">

	<resultMap type="com.ssafy.rest.vo.user" id="resultUser">
		<id column="id" property="id"/>
        <result column="name" property="name"/>
		<result column="password" property="password"/>
		<result column="nickname" property="nickname"/>
		<result column="email" property="email"/>
		<result column="kakao" property="kakao"/>
		<result column="profile_image" property="profileImage"/>
	</resultMap>

    <sql id="select-all-users">
        SELECT
            id,
            name,
            password,
            nickname,
            email,
            kakao,
            profile_image
        FROM
            user
    </sql>
	
	<insert id="insertUser"  parameterType="user" >
		INSERT into user(id, name, password, nickname, email, kakao, profile_image)
        VALUES(#{id}, #{name}, #{password}, #{nickname}, #{email}, #{kakao}, #{profileImage})
	</insert>

    <update id="updateUser" parameterType="user">
        UPDATE user
        SET
            name=#{name},
            password=#{password},
            nickname=#{nickname},
            email=#{email},
            kakao=#{kakao},
            profile_image=#{profileImage}
        WHERE id=#{id}
    </update>

	<delete id="deleteMember" parameterType="int">
		delete from user where id=#{value}
	</delete>
	
	<select id="login" parameterType="user" resultMap="resultUser" >
		<include refid="select-all-users"/>
		 WHERE id=#{id} AND password=#{password}
	</select>
	
</mapper>